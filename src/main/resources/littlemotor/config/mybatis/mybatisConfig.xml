<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration><!-- 配置信息是有严格的先后顺序的不能改变 -->
  
  <properties resource="cn/littlemotor/config/mybatis/jdbc.properties">
  一些配置参数
  </properties>
  
  <settings>
    <!-- 这个配置使全局的映射器启用或禁用缓存 -->
    <setting name="cacheEnabled" value="true"></setting>
    <!-- 允许自动生成主键，需要驱动支持 -->
    <setting name="useGeneratedKeys" value="true"></setting>
    <!-- 配置默认的执行器 -->
    <setting name="defaultExecutorType" value="REUSE"></setting>
    <!-- 延迟加载选项 -->
    <setting name="lazyLoadingEnabled" value="true"/>
  </settings>
  
	<typeAliases><!-- 别名 -->
		<typeAlias alias="microPostModel" 
			type="cn.littlemotor.model.MicroPostModel"/>
		
	</typeAliases>
	
	<!-- 数据库环境 -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${database.driver}"/>
        <property name="url" value="${database.url}"/>
        <property name="username" value="${database.username}"/>
        <property name="password" value="${database.password}"/>
      </dataSource>
    </environment>
  </environments>
  
  <!-- 引入映射器 -->
  <mappers>
    <mapper resource="cn/littlemotor/config/mybatis/mapper/micropostMapper.xml"/>
  </mappers>
  
</configuration>